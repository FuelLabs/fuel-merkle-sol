{
  "name": "fuel-sol",
  "version": "0.1.0",
  "description": "The Fuel v2 Solidity smart contracts.",
  "main": "test/index.js",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile --show-stack-traces",
    "lint": "npx solhint contracts/*.sol && npx eslint . && npx markdownlint --ignore node_modules **/*.md",
    "format": "prettier \"contracts/**/*.sol\" \"**/*.ts\" \"**/*.md\" \"**/*.yaml\"",
    "format-check": "prettier --check \"contracts/**/*.sol\" \"**/*.ts\" \"**/*.md\" \"**/*.yaml\"",
    "test": "npx hardhat test",
    "test-parallel": "npx mocha 'test/**/*.ts' --recursive --parallel --require hardhat/register",
    "test-no-compile": "npx hardhat test --no-compile",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.0.8",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.1",
    "@typechain/ethers-v5": "^2.0.0",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.26",
    "hardhat": "^2.0.8",
    "hardhat-deploy": "^0.7.0-beta.44",
    "hardhat-typechain": "^0.3.3",
    "solidity-coverage": "^0.7.14"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.2.0",
    "elliptic": ">=6.5.4",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "ethereum-waffle": "^3.2.1",
    "markdownlint": "^0.22.0",
    "markdownlint-cli": "^0.26.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "solc": "^0.7.4",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^3.0.0",
    "typescript": "^4.1.3"
  }
}
